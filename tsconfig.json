{
  "compilerOptions": {
    "target": "ES2022",
    //    "useDefineForClassFields": true,
    "module": "ES2022",
    //    "resolveJsonModule": true,
    "moduleResolution": "Node16",
    "noImplicitAny": true,
    "noEmit": true,
    "allowJs": false,
    "checkJs": false,
    "isolatedModules": false,
    //    "esModuleInterop": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@frlow/brine/client/lib/*": [
        "./src/client/*"
      ]
    }
  },
  "include": [
    "src",
    "examples"
  ],
  "exclude": [
    "test/**/*"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
