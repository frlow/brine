{
  "compilerOptions": {
    "target": "ES2022",
    //    "useDefineForClassFields": true,
    "module": "ES2022",
    //    "resolveJsonModule": true,
    "moduleResolution": "Node16",
    "noImplicitAny": true,
    "noEmit": true,
    "allowJs": false,
    "checkJs": false,
    "isolatedModules": false,
    "esModuleInterop": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@frlow/brine": ["./src/client/index.ts"],
      "@frlow/brine/vue": ["./src/client/vue.ts"],
      "@frlow/brine/react": ["./src/client/react.ts"],
      "@frlow/brine/svelte": ["./src/client/svelte.ts"],
      "@frlow/brine/extensions": ["./src/client/extensions/index.ts"],
    }
  },
  "include": [
    "src",
    "examples"
  ],
  "exclude": [
    "test/**/*"
  ]
}
